<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="@dimen/very_small_gap_between_components"
    android:paddingHorizontal="@dimen/small_gap_between_components">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/component_mate_request_preview_image_avatar"
        android:layout_width="56dp"
        android:layout_height="56dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:shapeAppearanceOverlay="?attr/shapeAppearanceCornerSmall"
        tools:srcCompat="@drawable/ic_launcher_background"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/component_mate_request_preview_text_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/component_mate_request_preview_image_avatar"
        android:layout_marginStart="@dimen/small_gap_between_components"
        android:textAppearance="?attr/textAppearanceBodyLarge"
        tools:text="Username"/>

</androidx.constraintlayout.widget.ConstraintLayout>